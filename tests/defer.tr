
routine release_resource() begin
    // releasing stuff
end


routine main(a: integer) is
    
    defer release_resource();  // it will be called in the end of the scope

    if a < 5:
        // you do not have to place release_resource() !!!
        return 4;

    if a > 10:
        // you do not have to place release_resource() !!! 
        return 10;
    
    // you do not have to place release_resource() !!!
    return 20;
end